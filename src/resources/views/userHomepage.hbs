<!-- userHomepage.hbs -->

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Trang Chủ</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* CSS cho album */
        .album {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .album-item {
            width: 200px;
            text-align: center;
            cursor: pointer;
            transition: transform 0.3s;
        }

        .album-item:hover {
            transform: scale(1.05);
        }

        .album-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .album-item p {
            margin-top: 10px;
            font-size: 16px;
            color: #333;
        }

        /* Styling cho phần sách nổi bật */
        .books-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .book-item {
            width: 150px;
            text-align: center;
            transition: transform 0.3s;
        }

        .book-item:hover {
            transform: scale(1.05);
        }

        .book-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .book-item p {
            margin-top: 10px;
            font-size: 14px;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Chào Mừng Đến Với Thư Viện</h1>

        <!-- Danh Mục Thể Loại Sách -->
        <section id="categories">
            <h2>Thể Loại Sách</h2>
            <div class="album">
                {{#each categories}}
                    <div class="album-item" onclick="location.href='/user/viewcategory/{{this.category_id}}'">
                        <img src="{{this.category_img}}" alt="{{this.category_name}}">
                        <p>{{this.category_name}}</p>
                    </div>
                {{/each}}
            </div>
        </section>

        <!-- Tủ Loại Sách Nổi Bật -->
        <section id="featured-books">
            <h2>Sách Nổi Bật</h2>
            <div class="books-grid">
                {{#each featuredBooks}}
                    <div class="book-item" onclick="location.href='/user/book/{{this.book_code}}'">
                        <img src="{{this.book_img}}" alt="{{this.book_title}}">
                        <p>{{this.book_title}}</p>
                    </div>
                {{/each}}
            </div>
        </section>
    </div>
</body>
</html>