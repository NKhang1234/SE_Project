<!-- userIndex.hbs -->
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Trang Chủ</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .album-section {
            margin-bottom: 50px;
        }
        .album-card, .category-card {
            margin-bottom: 30px;
        }
        .album-card img, .category-card img {
            height: 300px;
            object-fit: cover;
        }
        .rating {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        
        <!-- Thanh Search Bar -->
        <div class="mb-5">
            <form action="/user/search" method="GET" class="form-inline justify-content-center">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="book_title" class="form-control" placeholder="Tên sách">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <select name="category_id" class="form-control">
                        <option value="">Chọn thể loại</option>
                        {{#each allCategories}}
                            <option value="{{category_id}}">{{category_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Tìm Kiếm</button>
            </form>
        </div>

        <!-- Sách Đã Mượn -->
        <div class="album-section">
            <h3>Sách Đã Mượn</h3>
            <div class="row">
                {{#each borrowedBooks}}
                    <div class="col-md-3 album-card">
                        <div class="card h-100">
                            <img src="{{book_img}}" class="card-img-top" alt="{{book_title}}">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{book_title}}</h5>
                                <p class="card-text">
                                    <span class="rating">&#9733; {{average_rating}} / 5</span>
                                    ({{total_ratings}} đánh giá)
                                </p>
                                <p><strong>Ngày Mượn:</strong> {{borrow_date}}</p>
                                <p><strong>Ngày Trả:</strong> {{return_date}}</p>
                                <a href="/user/book/{{book_code}}" class="btn btn-info mt-auto">Xem Chi Tiết Sách</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    
        <!-- Sách Yêu Thích -->
        <div class="album-section">
            <h3>Sách Yêu Thích</h3>
            <div class="row">
                {{#each favoriteBooks}}
                    <div class="col-md-3 album-card">
                        <div class="card h-100">
                            <img src="{{book_img}}" class="card-img-top" alt="{{book_title}}">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{book_title}}</h5>
                                <p class="card-text">
                                    <span class="rating">&#9733; {{average_rating}} / 5</span>
                                    ({{total_ratings}} đánh giá)
                                </p>
                                <a href="/user/book/{{book_code}}" class="btn btn-info mt-auto">Xem Chi Tiết Sách</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    
        <!-- Thể Loại Yêu Thích -->
        <div class="album-section">
            <h3>Thể Loại Yêu Thích</h3>
            <div class="row">
                {{#each favoriteCategories}}
                    <div class="col-md-3 category-card">
                        <div class="card h-100">
                            <a href="/user/category/{{slug}}">
                                <img src="{{category_img}}" class="card-img-top" alt="{{category_name}}">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-center">
                                    <a href="/user/category/{{slug}}" class="stretched-link">{{category_name}}</a>
                                </h5>
                                <p class="card-text mt-auto">
                                    <span class="rating">&#9733; {{average_rating}} / 5</span>
                                    ({{total_ratings}} đánh giá)
                                </p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>