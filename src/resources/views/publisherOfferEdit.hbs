    <main class="w-full">
      <section>
        <nav
          class="flex flex-row items-center justify-between text-xl text-black w-full"
        >
          <!-- First Button -->
          <a
            href="/publisher/offerStatus"
            class="grow w-full p-4 bg-red-300 text-center"
