            href="/publisher/add"
            class="grow w-full p-4 bg-green-500 text-center"
          >
            ĐĂNG KÝ MỚI
          </a>
        </nav>
      </section>

      <!-- Breadcrumb -->
      <nav class="container mx-auto px-4 py-2 text-lg text-gray-600">
        <a href="/publisher/add" class="text-blue-600">Đăng ký mới /</a>
        Chỉnh sửa tiêu đề sách
      </nav>

      <!-- Main Content -->

      <form
        id="publisherBookForm"
        action="/publisher/edit"
        method="POST"
        class="container mx-auto px-4 py-8 flex flex-col lg:flex-row gap-8"
        enctype="multipart/form-data"
      >
        <input type="hidden" name="_method" value="PUT" />
        <input type="hidden" name="offer_id" value="{{offer_id}}" />

        <!-- Left Section -->
        <div class="lg:w-2/5 bg-white rounded-lg shadow p-4">
          <!-- Book Cover Image Preview -->
          <img
            src="/img/{{book_img}}"
            alt="Book cover"
            id="book-upload-image"
            class="w-full mb-4 rounded-lg shadow"
          />
          <!-- Upload Button -->
          <div class="flex justify-center items-center">
            <label
              for="book-image-upload"
              class="bg-red-600 text-white py-2 px-4 rounded-lg w-full text-center cursor-pointer hover:bg-red-700"
            >
              Tải hình ảnh lên
            </label>
            <input
              id="book-image-upload"
              type="file"
              accept="image/*"
              class="hidden"
              name="book_img"
              onchange="previewBookImage(event)"
            />
          </div>
        </div>

        <!-- Right Section -->
        <div
          class="lg:w-3/5 bg-white rounded-lg shadow p-6 text-xl font-bold text-black"
        >
          <h2 class="text-2xl font-bold mb-4 text-gray-700">
            Chỉnh sửa tiêu đề sách
          </h2>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div>
              <label class="block text-gray-700 font-medium">Tiêu đề sách:</label>
              <input
                type="text"
                id="bookTitle"
                name="book_title"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{book_title}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">ISBN:</label>
              <input
                type="text"
                id="bookISBN"
                name="book_code"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{book_code}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">Tác giả:</label>
              <input
                type="text"
                id="bookAuthor"
                name="book_author"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{book_author}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">Thể loại:</label>
              <input
                type="text"
                id="bookType"
                name="book_category"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{book_category}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">Ngôn ngữ:</label>
              <input
                type="text"
                id="bookLanguage"
                name="language"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{language}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">Ngày xuất bản:</label>
              <input
                type="date"
                id="bookDatePublish"
                name="publish_date"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{publish_date}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">Giá gốc (VND):</label>
              <input
                type="text"
                id="bookOriginalCost"
                name="base_price"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{base_price}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">Số lượng ưu đãi:</label>
              <input
                type="text"
                id="bookNumberOfDiscount"
                name="number_of_discount"
                class="mt-1 p-2 w-full border rounded-lg"
                value="{{number_of_discount}}"
              />
            </div>
            <div>
              <label class="block text-gray-700 font-medium">Ưu đãi:</label>
              <textarea
                rows="3"
                id="bookEventDiscount"
                name="discount"
                class="mt-1 p-2 w-full border rounded-lg"
              >{{discount}}</textarea>
            </div>
            <!-- Submit Button -->
            <div class="col-span-2 flex justify-end">
              <button
                type="submit"
                class="bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700"
              >
                Gửi
              </button>
            </div>
          </div>
        </div>
      </form>

    </main>

