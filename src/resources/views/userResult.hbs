<!-- userResult.hbs -->
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Kết Quả Tìm Kiếm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .album-section {
            margin-bottom: 50px;
        }
        .album-card {
            margin-bottom: 30px;
        }
        .album-card img {
            height: 300px;
            object-fit: cover;
        }
        .rating {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        
        <!-- Thanh Search Bar -->
        <div class="mb-5">
            <form action="/user/search" method="GET" class="form-inline justify-content-center">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="book_title" class="form-control" placeholder="Tên sách" value="{{searchParams.book_title}}">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <select name="category_id" class="form-control">
                        <option value="">Chọn thể loại</option>
                        {{#each allCategories}}
                            <option value="{{category_id}}" {{#ifCond ../searchParams.category_id '==' category_id}}selected{{/ifCond}}>{{category_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Tìm Kiếm</button>
            </form>
        </div>
        
        <h3>Kết Quả Tìm Kiếm</h3>
        <div class="row">
            {{#if searchedBooks.length}}
                {{#each searchedBooks}}
                    <div class="col-md-3 album-card">
                        <div class="card h-100">
                            <img src="{{book_img}}" class="card-img-top" alt="{{book_title}}">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{book_title}}</h5>
                                <p class="card-text">
                                    <span class="rating">&#9733; {{average_rating}} / 5</span>
                                    ({{total_ratings}} đánh giá)
                                </p>
                                <a href="/user/book/{{book_code}}" class="btn btn-info mt-auto">Xem Chi Tiết Sách</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="col-12">
                    <p>Không tìm thấy kết quả nào cho tìm kiếm của bạn.</p>
                </div>
            {{/if}}
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>