<!-- userCategories.hbs -->
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>{{category.category_name}} - Sách</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .book-card, .category-card {
            margin-bottom: 30px;
        }
        .book-card img, .category-card img {
            height: 300px;
            object-fit: cover;
        }
        .rating {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Thông Tin Danh Mục -->
        <div class="category-details mb-4">
            <h1>Danh mục: {{category.category_name}}</h1>
            <p>{{category.description}}</p>
        </div>

        <!-- Danh Sách Sách Dạng Album -->
        <div class="book-list row">
            {{#each books}}
                <div class="col-md-3 book-card">
                    <div class="card h-100">
                        <img src="{{book_img}}" class="card-img-top" alt="{{book_title}}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{book_title}}</h5>
                            <p class="card-text">
                                <span class="rating">&#9733; {{average_rating}} / 5</span>
                                ({{total_ratings}} đánh giá)
                            </p>
                            {{!-- Phần Xem Chi Tiết Sách --}}
                            {{#if ../user_id}}
                                <a href="/user/book/{{book_code}}" class="btn btn-info mt-auto">Xem Chi Tiết Sách</a>
                            {{else}}
                                <p class="mt-auto">Vui lòng <a href="/login">đăng nhập</a> để xem chi tiết sách.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

        <!-- Danh Sách Các Danh Mục Khác Dạng Album -->
        <div class="other-categories mt-5">
            <h3>Các Danh Mục Khác</h3>
            <div class="row">
                {{#each allCategories}}
                    <div class="col-md-3 category-card">
                        <div class="card h-100">
                            <a href="/user/category/{{slug}}">
                                <img src="{{category_img}}" class="card-img-top" alt="{{category_name}}">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-center">
                                    <a href="/user/category/{{slug}}" class="stretched-link">{{category_name}}</a>
                                </h5>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>